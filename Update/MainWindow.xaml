<Window
    x:Class="Update.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Update"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="软件更新"
    Width="400"
    Height="300"
    mc:Ignorable="d">

    <Grid Margin="10">
        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="检查到新版本：" />
        <TextBlock
            x:Name="VersionText"
            Margin="0,30,0,0"
            FontSize="14" />
        <TextBlock
            Margin="0,60,0,0"
            FontSize="14"
            FontWeight="Bold"
            Text="更新日志：" />
        <TextBox
            x:Name="UpdateLogText"
            Height="80"
            Margin="0,10,0,0"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <ProgressBar
            x:Name="progressBar"
            Height="20"
            Margin="0,180,0,0"
            Maximum="100" />
    </Grid>
</Window>
